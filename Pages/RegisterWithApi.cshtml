@page
@model SiliconPower.Pages.RegisterWithApiModel
@{

}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Register using API</h1>
            <form method="post" asp-page-handler="Http">
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.Email">Email Address</label>
                    <input type="text" asp-for="Model.Email" class="form-control" />
                    <span asp-validation-for="Model.Email" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.PhoneNumber">Phone Number</label>
                    <input type="text" asp-for="Model.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Model.PhoneNumber" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.Password">Password</label>
                    <input type="password" asp-for="Model.Password" class="form-control" />
                    <span asp-validation-for="Model.Password" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.ConfirmedPassword">Please confirm Password</label>
                    <input type="password" asp-for="Model.ConfirmedPassword" class="form-control" />
                    <span asp-validation-for="Model.ConfirmedPassword" class="text-danger" />
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h5>Or try going back to the Razor Form</h5>
            <a class="btn btn-secondary" href="/register">Use RAZOR</a>
        </div>
    </div>
</div>
