@page
@model SiliconPower.Pages.LoginModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Login</h1>
            <form method="post">
                <div class="mb-3">
                    <label class="col-form-label" asp-for="Model.Email">Email</label>
                    <input class="form-control" type="text" asp-for="Model.Email" />
                    <span asp-validation-for="Model.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="Model.Password">Password</label>
                    <input class="form-control" type="password" asp-for="Model.Password" />
                    <span asp-validation-for="Model.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="checkbox" asp-for="Model.KeepMeLogged" />
                    <label class="form-check-label" asp-for="Model.KeepMeLogged">Keep me logged in</label>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Login!</button>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
    </div>

</div>
